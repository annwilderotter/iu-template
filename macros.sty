%%%% SUPERVISOR %%%%
\newcommand{\Supervision}[2][nogender]{%
    \ifthenelse{\equal{#1}{m}}{\newcommand{\betreuungschluessel}{Betreuer}}{%
        \ifthenelse{\equal{#1}{f}}{\newcommand{\betreuungschluessel}{Betreuerin}}{%
            \ifthenelse{\equal{#1}{n}}{\newcommand{\betreuungschluessel}{Supervisor}}{%
                \newcommand{\betreuungschluessel}{Betreuer/in}
            }
        }
    }
    \newcommand{\betreuungwert}{#2}
}
%%%% AUTHOR %%%%
\newcommand{\Author}[2][nogender]{%
    \ifthenelse{\equal{#1}{m}}{%
        \newcommand{\autorschluessel}{Autor}
        \newcommand{\studentschluessel}{Studierender}
    }{%
        \ifthenelse{\equal{#1}{f}}{%
            \newcommand{\autorschluessel}{Autorin}
            \newcommand{\studentschluessel}{Studierende}
        }{%
            \ifthenelse{\equal{#1}{n}}{%
                \newcommand{\autorschluessel}{Author}
                \newcommand{\studentschluessel}{Student}
            }{%
            \newcommand{\autorschluessel}{Autor/in}
            \newcommand{\studentschluessel}{Studierende/r}
            }
        }
        \newcommand{\autorwert}{#2}
    }
}
%%%% ADDRESS %%%%
\newcommand{\Address}[2]{%
  \newcommand{\strhausnr}{#1}
  \newcommand{\plzort}{#2}
}
%%%% MATRICLE NUMBER %%%%
\newcommand{\Matriclenumber}[1]{\newcommand{\matrikelnummer}{#1}}
%%%% SUBMISSION DATE %%%%
\newcommand{\Submission}[1]{\newcommand{\abgabetermin}{#1}}
%%%% THESIS TYPE %%%%
\newcommand{\Thesistype}[1]{
    \ifthenelse{\equal{#1}{CA}}{\newcommand{\thesistype}{Case Study}}{%
        \ifthenelse{\equal{#1}{BA}}{\newcommand{\thesistype}{Bachelor Thesis}}{%
            \ifthenelse{\equal{#1}{MA}}{\newcommand{\thesistype}{Master Thesis}}{%
            \errmessage{Unknown Thesis Type}
            }
        }
    }
}
